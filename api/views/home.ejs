<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desafío Clase 26</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-start mt-3 ">
            <h1 class="mb-3">Welcome, <span class="text-success">user</span></h1>
            <form action='/logout' method='POST' class="mt-2 mx-3">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
        <h1 class="mt-3 text-center">MAIN PAGE</h1>

        <!-- PRODUCTS FORM -->
        <h2 class="px-3 my-4 bg-danger">Add new products</h2>
        <form id="addProd">
            <input id="prodTitle" type="text" placeholder="Title" class="form-control w-50 my-2">
            <input id="prodPrice" type="number" placeholder="Price" class="form-control w-50 my-2">
            <input id="prodThumbnail" type="text" placeholder="Url image" class="form-control w-50 my-2">
            <button type="submit" class="btn btn-danger">Add Product</button>
        </form>
        <!-- PRODUCTS FORM EXAMPLE -->
        <div class="my-3">
            <p> Title: Globo Terráqueo <br>
                Price: 345 <br>
                Thumbnail: https://cdn3.iconfinder.com/data/icons/education-209/64/globe-earth-geograhy-planet-school-256.png
            </p>
        </div>
        <!-- RANDOM FAKER PRODUCTS -->
        <div class="my-3">
            <h2 class="px-3 my-5 bg-danger">Random Faker Products</h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Thumbnail</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider" id="fakerProd">
                        <!-- faker.hbs inserted -->
                    </tbody>
                </table>
            </div>
        </div>
        <!-- PRODUCTS RENDER TABLE -->
        <div class="my-3">
            <h2 class="px-3 my-5 bg-danger">Current Products</h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Price</th>
                            <th scope="col">Thumbnail</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider" id="currentProd">
                        <!-- product.hbs inserted -->
                    </tbody>
                </table>
            </div>
        </div>
        <!-- FORUM -->
        <div class="my-3">
            <h2 class="px-3 my-5 bg-danger">FORUM</h2>
            <div id="compressionOutput"></div>
            <div class="p-5">
                <div id="messagesPool" class="messagesChart">
                </div>
                <div>
                    <form id="formMessage">
                        <input id="userEmailInput" type="email" placeholder="Example: juan@gmail.com" class="form-control w-50 my-2">
                        <input id="userName" type="text" placeholder="Example: Juan" class="form-control w-50 my-2">
                        <input id="userLastName" type="text" placeholder="Example: Pérez" class="form-control w-50 my-2">
                        <input id="userAge" type="number" placeholder="Example: 18" class="form-control w-50 my-2">
                        <input id="userNickName" type="text" placeholder="Example: JP" class="form-control w-50 my-2">
                        <input id="userAvatar" type="text" placeholder="Example: https://www.svgrepo.com/show/111204/avatar.svg" class="form-control w-50 my-2" >
                        <input id="messageInput" type="text" placeholder="Type your message..." class="form-control w-50 my-2">
                        <button type="submit" class="btn btn-success">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Faker -->
    <!-- <script src="./fakerProducts.js"></script> -->
    <!-- Normalizr -->
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <!-- Importo Handlebars desde la CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <!-- Importo libreria socket.io -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Importo configuración de los sockets -->
    <script src="./clientSocket.js"></script>
    <!-- Añado Estilos -->
    <link rel="stylesheet" href="./styles.css">
</body>
</html>