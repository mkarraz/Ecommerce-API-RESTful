<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3er Entrega</title>
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <!-- NAVBAR -->
            <%- include('./partials/navbarAddProdForm.ejs', { user }) %> 
        <!-- NAVBAR -->
    
        <!-- PRODUCTS -->
        <div class="my-3">
            <h1 class="my-3 text-primary">CART</h1>
            <div class="table-responsive">
                <table class="table table-hover">
                    <% if(products.length !== 0) { %>
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Image</th>
                        </tr>
                    </thead>
                    <% } %>
                    <tbody class="table-group-divider" id="products">
                        <%- include('./cart/cartProducts.ejs', { products }) %>
                    </tbody>
                </table>
            </div> 
            <% if(products.length !== 0) { %>
                <div class="text-center">
                    <form action='/delete' method='POST' class="mt-2 mx-3">
                        <button type="submit" onclick="delalert()" class="btn btn-danger">Delete all products form cart</button>
                    </form>
                </div>
                <div class="text-center">
                    <form action='/order' method='POST' class="mt-2 mx-3">
                        <button type="submit" onclick="orderalert()" class="btn btn-success">Order</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script>
        function delalert() {
            Swal.fire({
                title: "Deleted!",
                background: '#161616',
                showConfirmButton: false,
                width: "200px",
                timer: 1100,
            })
        }
        function orderalert() {
            Swal.fire({
                title: "Order sended",
                background: '#161616',
                showConfirmButton: false,
                width: "200px",
                timer: 1100,
            })
        }
    </script>
</body>
</html>